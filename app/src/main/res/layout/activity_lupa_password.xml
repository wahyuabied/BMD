<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.mrabid.bumidesa.LupaPasswordActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/main_toolbar"
            android:id="@+id/toolbar"/>

        <TextView
            android:layout_marginTop="@dimen/_20sdp"
            android:paddingLeft="@dimen/_40sdp"
            android:paddingRight="@dimen/_40sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="center"
            android:textColor="@color/colorBlack"
            android:text="Ketikkan email Anda dibawah ini, kami akan mengirimkan tauan/link untuk reset password Anda"/>


            <EditText
                android:layout_width="match_parent"
                android:inputType="textEmailAddress"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_height="wrap_content"
                android:hint="example@gmail.com"/>


        <Button
            android:layout_margin="@dimen/_20sdp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_button_splash"
            android:textColor="@color/colorWhite"
            android:textSize="16sp"
            android:text="@string/kirim"/>


    </LinearLayout>

</ScrollView>
