<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_10sdp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardElevation="@dimen/_5sdp">
        <LinearLayout
            android:padding="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/circle_profil_list_pesan"
                    android:layout_width="@dimen/_60sdp"
                    android:src="@drawable/img_flower"
                    app:civ_border_color="@color/colorBlack"
                    app:civ_border_width="@dimen/_1sdp"
                    android:layout_height="@dimen/_60sdp" />

                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_toRightOf="@+id/circle_profil_list_pesan"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_nama_list_pesan"
                    android:textColor="@color/colorBlack"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:text="Nama"/>

                <TextView
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tanggal_list_pesan"
                    android:text="12 Des 2018,07:44"
                    android:layout_below="@+id/tv_nama_list_pesan"
                    android:layout_toRightOf="@+id/circle_profil_list_pesan"/>

                <ImageView
                    android:id="@+id/imgv_read_identifier_list_pesan"
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_10sdp"
                    android:background="@drawable/notif_keranjang"
                    android:backgroundTint="@color/colorButtonSplash"
                    android:layout_alignParentRight="true"/>

                <Button
                    android:id="@+id/btn_identifier_list_pesan"
                    android:visibility="gone"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentRight="true"
                    android:text="Balas"
                    android:textColor="@color/colorButtonSplash"
                    android:background="@drawable/bg_button_border" />
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:background="@color/line"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_subject_list_pesan"
                android:textStyle="bold"
                android:textColor="@color/colorBlack"
                android:textSize="16sp"
                android:text="Bunga Mawar Merah"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/tv_isi_list_pesan"
                android:textColor="@color/colorBlack"
                android:textSize="14sp"
                android:text="Bunga Mawar Merah"/>


        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>