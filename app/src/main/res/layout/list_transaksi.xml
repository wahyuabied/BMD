<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_margin="@dimen/_5sdp"
        android:layout_width="match_parent"
        app:cardElevation="@dimen/_3sdp"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/imgv_list_transaksi"
                android:padding="@dimen/_10sdp"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/img_background_slider"
                android:scaleType="fitXY"/>

            <LinearLayout
                android:layout_toRightOf="@+id/imgv_list_transaksi"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/tv_nama_list_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorBlack"
                    android:textSize="16sp"
                    android:text="Bunga Matory"/>

                <TextView
                    android:id="@+id/tv_tanggal_list_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="tanggal"/>

                <TextView
                    android:id="@+id/tv_harga_list_transaksi"
                    android:textSize="16sp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="price"
                    android:textStyle="bold"
                    android:textColor="@color/colorPrice"/>

                <TextView
                    android:id="@+id/tv_jumlah_list_transaksi"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Jumlah barang"
                    android:textColor="@color/colorBlack"/>

            </LinearLayout>

            <View
                android:id="@+id/view1_list_transaksi"
                android:layout_below="@+id/imgv_list_transaksi"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_1sdp"
                android:background="@color/line"/>
            
            <TextView
                android:id="@+id/tv_status_list_transaksi"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_below="@+id/view1_list_transaksi"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_10sdp"
                android:text="Waiting"/>

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>